<!DOCTYPE html>
<html>
  <%- include('partials/head',locals) %>
  
  <body>
    <!-- Header Navbar -->
    <%- include('partials/navbar',locals) %>
    <div class="container-fluid" style="margin-bottom: 50px;">
      
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 col-md-push-2 col-lg-push-2">
                <div class="jumbotron" style="border-radius: 5px; border: 1px solid;"> 
                    <h2 class="text-center text-primary bg-info" style="font-style: italic; border: 1px solid; border-radius: 5px;">Media Center Login</h2>
                    <div class="container">
                        <div class="row">
                            <form role="form" class="form-horizontal" style="border: 1px solid; border-radius: 5px; margin: 0px; padding: 5px;" action="/login" method="POST" name='do_lgn'> 
                                <div class="form-group"> 
                                    <label class="text-center col-sm-12 col-md-4 text-primary" for="uName" style="text-align: center; font-style: italic;">Login Name</label>
                                    <div class="col-sm-12 col-md-7">
                                        <input type="text" class="form-control " id="uName" placeholder="LogIn Name" style="text-align: center;" required name="uName">
                                    </div>
                                </div>
                                <div class="form-group"> 
                                    <label class="text-center col-sm-12 col-md-4 text-primary" for="uPass" style="text-align: center; font-style: italic;">PassCode</label>
                                    <div class="col-sm-12 col-md-7">
                                        <input type="password" class="form-control " id="uPass" placeholder="PassCode" style="text-align: center;" required name="uPass">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 col-md-push-4 text-center">
                                        
                                        <button type="submit" class="btn btn-primary" style="box-shadow: 1px 1px 1px 1px #ededfa , 2px 2px 1px 1px #35289f;">
                                        <span class="glyphicon glyphicon-check" aria-hidden="true"></span>
                                            Submit</button>
                                        
                                        <!-- <a class="btn btn-primary" href="#" id="Btn_submit_login" style="box-shadow: 1px 1px 1px 1px #ededfa , 2px 2px 1px 1px #35289f;">Submit</a> -->
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Footer NavBar  -->
    <%- include('partials/footer_navbar') %>
    <!-- Foot Scripts JavaScripts -->
    <%- include('partials/foot') %>
  </body>
  
</html>