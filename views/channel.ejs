<!DOCTYPE html>
<html>
  <%- include('partials/head',locals) %>
  
  <body>
    <!-- Header Navbar -->
    <%- include('partials/navbar',locals) %>
    <div class="container-fluid" style="margin-bottom: 50px;">
    
    <div class="panel panel-default" style="box-shadow: darkblue 0px 0px 64px 8px inset , black 0px 0px 12px 8px !important;border-top-left-radius: 20px;border-top-right-radius: 20px;">
        <div class="panel-heading" style="border-top-left-radius: 20px;border-top-right-radius: 20px;">
          <h3 class="panel-title text-center text-italic text-header text-bolder" ><%= locals.channel.title %> </h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
              
              <div class="media" >
                <a class="pull-left" href="#" >
                  <img class="media-object" style="border-radius: 20px;" src="<%= locals.channel.poster %>" alt="Image">
                </a>
                <div class="media-body">
                  <h4 class="media-heading text-center"><%= locals.channel.title %></h4>
                  
              <table class="table table-condensed table-hover">
                <tbody>
                  <tr>
                    <td>Genre</td>
                    <td><%= locals.channel.genres %> </td>
                  </tr>
                  
                  <tr>
                    <td>Country</td>
                    <td><%= locals.channel.country %> </td>
                  </tr>
                  <tr>
                    <td>Plot/Story</td>
                    <td><%= locals.channel.description %> </td>
                  </tr>
                </tbody>
              </table>
                </div>
              </div>
              
              
              
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            
                <video autoplay controls class="player" id="player1" height="360" width="100%" loop poster="<%= locals.channel.poster %> " preload="none"  style="max-width: 100%" tabindex="0" title="<%= locals.channel.title %> ">
                  <source type="video/mp4" src="<%= locals.channel.FileBaseDir +"/"+ locals.channel.address+"/"+locals.channel.File %>" />
                  <object width="320" height="360" type="application/x-shockwave-flash" data="/assets/swf/mediaelement-flash-video.swf">
                    <param name="movie" value="/assets/swf/mediaelement-flash-video.swf" />
                    <param name="flashvars" value="controls=true&file=<%= locals.channel.FileBaseDir +"/"+ locals.channel.address+"/"+locals.channel.File %>" />
                    <img src="<%= locals.movie.poster %> " width="320" height="360" title="No video playback capabilities" />
                  </object>
            <!--                src="/vod/webcam.m3u8" -->
                  </video>
              
              <div class="row">
                <button id="BackButton" type="button" class="btn btn-default center-block">Close</button>
                <script>
                  $(function(){
                    $('#BackButton').on('click',function(e){
                      e.preventDefault();
                      window.history.back();
                    });
                  });
                </script> 
              </div>
              
              
              
            </div>
        </div>
    </div>
    
    
